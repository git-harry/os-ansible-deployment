# {{ ansible_managed }}

# vim:set ft=upstart ts=2 et:

description "{{ item }}"
author "Kevin Carter <kevin.carter@rackspace.com>"

start on runlevel [2345]
stop on runlevel [016]

respawn
respawn limit 10 5

# Set the RUNBIN environment variable
env RUNBIN="/usr/local/bin/{{ item }}"

# Change directory to service users home
chdir "{{ system_home_folder }}"

# Pre start actions
pre-start script
  mkdir -p "/var/run/{{ item }}"
  chown {{ system_user_name }}:{{ system_group_name }} "/var/run/{{ item }}"

  mkdir -p "/var/lock/{{ item }}"
  chown {{ system_user_name }}:{{ system_group_name }} "/var/lock/{{ item }}"
end script

# Post stop actions
post-stop script
  rm "/var/run/{{ item }}/{{ item }}.pid"
end script

# Run the start up job
exec start-stop-daemon --start \
                       --chuid {{ system_user_name }} \
                       --make-pidfile \
                       --pidfile /var/run/{{ item }}/{{ item }}.pid \
                       --exec "{{ program_override|default('$RUNBIN') }}" \
                       -- {{ program_config_options|default('') }} \
                       --log-file={{ log_dir }}/{{ item }}.log
